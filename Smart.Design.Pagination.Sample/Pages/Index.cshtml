@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var superHeroes = Model.SuperHeroes;
    var numberOfSquare = Model.NumberOfPageInNavBar;
    var currentPage = Model.PageIndex;

    var endIndex = currentPage + numberOfSquare - 1;
    if (superHeroes.TotalPages - currentPage < numberOfSquare)
    {
        endIndex = superHeroes.TotalPages;
    }
    var startIndex = Math.Max(endIndex - numberOfSquare + 1, 1);
}
<div class="o-container u-padding-bottom-xl">
    <h1 class="c-h2">List of existing super heroes</h1>

    <nav class="c-pagination u-spacer-bottom-xl" aria-label="Page navigation">
        <ul class="c-pagination__nav">
            <li class="c-pagination__item">
                <a class="c-button c-button--borderless c-button--icon" href="?PageIndex=@(Model.PageIndex - 1)" @(superHeroes.HasPreviousPage ? string.Empty : "disabled=\"disabled\"")>
                    <span class="c-button__content">
                        <div class="o-svg-icon o-svg-icon-chevron-left  ">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M14.7071 5.29289C15.0976 5.68342 15.0976 6.31658 14.7071 6.70711L9.41421 12L14.7071 17.2929C15.0976 17.6834 15.0976 18.3166 14.7071 18.7071C14.3166 19.0976 13.6834 19.0976 13.2929 18.7071L7.29289 12.7071C6.90237 12.3166 6.90237 11.6834 7.29289 11.2929L13.2929 5.29289C13.6834 4.90237 14.3166 4.90237 14.7071 5.29289Z" fill="#595959" />
                            </svg>
                        </div>
                        <div class="u-sr-accessible">
                        </div>
                    </span>
                </a>
            </li>
            @for (var i = startIndex; i <= endIndex; i++)
            {
                <li class="c-pagination__item @(i == Model.PageIndex ? "c-pagination__item--active" : string.Empty)">
                    <a class="c-pagination__link" href="?PageIndex=@i.ToString()">@i.ToString()</a>
                </li>
            }
            @if (superHeroes.HasNextPage)
            {
                <li class="c-pagination__item">
                    <a class="c-button c-button--borderless c-button--icon" href="?PageIndex=@(Model.PageIndex + 1)" @(superHeroes.HasNextPage ? string.Empty : "disabled=\"disabled\"")>
                        <span class="c-button__content">
                            <div class="o-svg-icon o-svg-icon-chevron-right  ">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9.29289 18.7071C8.90237 18.3166 8.90237 17.6834 9.29289 17.2929L14.5858 12L9.29289 6.70711C8.90237 6.31658 8.90237 5.68342 9.29289 5.29289C9.68342 4.90237 10.3166 4.90237 10.7071 5.29289L16.7071 11.2929C17.0976 11.6834 17.0976 12.3166 16.7071 12.7071L10.7071 18.7071C10.3166 19.0976 9.68342 19.0976 9.29289 18.7071Z" fill="#595959" />
                                </svg>
                            </div>
                            <div class="u-sr-accessible">
                            </div>
                        </span>
                    </a>
                </li>
            }
        </ul>
    </nav>

    @foreach (var superHero in superHeroes)
    {
        <div class="c-panel u-spacer-bottom-l">
            <div class="c-panel__header">
                <div class="c-panel__title">
                    @superHero.Name
                </div>
            </div>
            <div class="c-panel__body">
                <div class="c-key-value">
                    <div class="o-grid">
                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Combat)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Combat
                                </div>
                            </div>
                        </div>

                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Durability)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Durability
                                </div>
                            </div>
                        </div>
                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Intelligence)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Intelligence
                                </div>
                            </div>
                        </div>

                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Power)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Power
                                </div>
                            </div>
                        </div>
                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Speed)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Speed
                                </div>
                            </div>
                        </div>
                        <div class="o-grid-col-4">
                            <div class="c-key-value-item">
                                <div class="c-key-value-item__key">
                                    @nameof(superHero.Powerstats.Strength)
                                </div>
                                <div class="c-key-value-item__value">
                                    @superHero.Powerstats.Strength
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>